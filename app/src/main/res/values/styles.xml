<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="EditorTheme" parent="AppTheme">

    </style>

    <style name="MyTheme">
        <item name="android:textColor">#FF00A5</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:listDivider">@color/white</item>

    </style>
    <style name="MenuTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:lineSpacingExtra">-4dp</item>
    </style>
    <style name="MenuItemStyle" parent="@style/Widget.Design.NavigationView">
        <item name="android:height">40dp</item>
    </style>
    <style name="NavigationThemeBelow" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomProgressBar"
        parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar</item>
        <item name="android:maxHeight">15dip</item>
    </style>
    <style name="DialogTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>


        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="DialogThemeAnother">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>


        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="CalendarTitle">
        <item name="android:textSize">@dimen/calendar_text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="CalendarCell.DayHeader">
        <item name="android:textSize">@dimen/calendar_text_small</item>
    </style>

    <style name="CalendarCell.CalendarDate">
        <item name="android:textSize">@dimen/calendar_text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="AppTheme.ExoPlayer" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="ToolTipTextStyle">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fab_fourteen</item>
    </style>


    <!--chat-->
    <!-- Base application theme. -->
    <style name="ChatSDKTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- For the sliding affect to look good in the chat context and pick friends context.-->
    <style name="ChatSDKSlidingTransactionTheme" parent="@style/SdkTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--Action bar style-->
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/chat_blue</item>
        <item name="android:titleTextStyle">@style/actionBarTextStyle</item>
    </style>

    <style name="actionBarTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- TextView Style-->
    <style name="TextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="TextViewStyleSmall">
        <item name="android:textSize">13dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="MessageDateStyle">
        <item name="android:textSize">13dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Login Activity Button style-->
    <style name="LoginButtonsStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--Generic Button Style-->
    <style name="SdkButtonStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>

    </style>

    <!--Circle image view style-->
    <style name="CircleIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ThreadListCircleIconStyle" parent="CircleIconStyle">
        <item name="android:layout_margin">3dp</item>
    </style>

    <!--Rounded corner image view style-->
    <style name="RoundedCornerImageViewStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!--Row Margins-->
    <style name="RowStyle">
        <item name="android:padding">7dp</item>
    </style>

    <!--Message Option Button Style-->

    <style name="ImagePopupAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ProfileViewTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CountryIconStyle">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>

    </style>
    <!--chat-->

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="Theme_Dialog_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <style name="Theme_Dialog_Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <dimen name="bar_height">0dp</dimen>

    <!--chat-->
    <style name="SdkTheme"
        parent="Theme.AppCompat.Light">
        <!-- App Bar -->
        <item name="colorPrimary">@color/sdkPrimary</item>
        <item name="colorPrimaryDark">@color/sdkPrimaryDark</item>
        <item name="colorAccent">@color/sdkAccent</item>
        <item name="colorControlNormal">@color/sdkTextColorPrimary</item>
        <item name="actionBarWidgetTheme">@style/Widget.SdkTheme.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.SdkTheme.ActionBar</item>
    </style>

    <style name="Widget.SdkTheme.ActionBar"
        parent="Widget.AppCompat.ActionBar">

    </style>
    <style name="ThemeOverlay.SdkTheme.ActionBar"
        parent="ThemeOverlay.AppCompat.ActionBar">

        <item name="android:textColorPrimary">@color/sdkTextColorPrimary</item>
        <item name="android:textColorSecondary">?android:textColorSecondary</item>
    </style>
    <!--chat-->

    <style name="RTE_ToolbarBaseThemeLight" parent="RTE_BaseThemeLight">
        <item name="rte_ToolbarButton">@style/RTE_ToolbarButton</item>
        <item name="rte_ToolbarSpinner">@style/RTE_ToolbarSpinnerLight</item>
        <item name="rte_ToolbarSpinnerItem">@style/RTE_ToolbarSpinnerItem</item>
        <item name="rte_ToolbarSpinnerSelectedColor">@color/rte_spinner_selected_color_light</item>
        <item name="rte_ToolbarVerticalDivider">@style/RTE_ToolbarVerticalDivider</item>


    </style>

    <style name="RTE_ThemeLight" parent="@style/RTE_ToolbarBaseThemeLight"/>

    <!-- DARK THEME -->
    <style name="RTE_ToolbarBaseThemeDark" parent="RTE_BaseThemeDark">
        <item name="rte_ToolbarButton">@style/RTE_ToolbarButton</item>
        <item name="rte_ToolbarSpinner">@style/RTE_ToolbarSpinnerDark</item>
        <item name="rte_ToolbarSpinnerItem">@style/RTE_ToolbarSpinnerItem</item>
        <item name="rte_ToolbarSpinnerSelectedColor">@color/rte_spinner_selected_color_dark</item>
        <item name="rte_ToolbarVerticalDivider">@style/RTE_ToolbarVerticalDivider</item>

    </style>

    <style name="RTE_ThemeDark" parent="@style/RTE_ToolbarBaseThemeDark"/>


    <style name="RTE_BaseThemeLight" parent="@style/Base.Theme.AppCompat.Light">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarSize">0dp</item>
    </style>

    <!-- DARK THEME -->
    <style name="RTE_BaseThemeDark" parent="@style/Theme.AppCompat">

    </style>

    <style name="RTE_ToolbarButton" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">4dip</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="RTE_ToolbarSpinnerLight" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dip</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="RTE_ToolbarSpinnerDark" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dip</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="RTE_ToolbarSpinnerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">marquee</item>
        <!--<item name="android:textSize">@dimen/rte_spinnerTextSize</item>-->
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="RTE_ToolbarVerticalDivider">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>
