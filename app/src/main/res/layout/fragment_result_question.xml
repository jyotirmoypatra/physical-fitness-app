<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#F2F2F2">
    <RelativeLayout
        android:id="@+id/rlBack"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F6F6F6">

        <com.ashysystem.mbhq.view.TextViewSemiBold
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Back"

            android:textColor="@color/black"
            android:textSize="@dimen/fab_sixteen" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlBack"
        android:background="@drawable/mbhq_bar">

        <com.ashysystem.mbhq.view.TextViewSemiBold
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/fab_sixteen"
            android:text="RESULTS"
            android:textColor="@color/white"
            android:textSize="@dimen/fab_sixteen" />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llBlock"></androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/llBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@+id/rlHeader"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".54">

                <LinearLayout
                    android:id="@+id/llDas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:visibility="visible">
                    <com.ashysystem.mbhq.view.TextViewSemiBold
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/fab_fourteen"
                        android:text="D"/>
                    <com.ashysystem.mbhq.view.TextViewSemiBold
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/fab_fourteen"
                        android:text="A"/>
                    <com.ashysystem.mbhq.view.TextViewSemiBold
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/fab_fourteen"
                        android:text="S"/>
                </LinearLayout>



            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1">
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>




</RelativeLayout>