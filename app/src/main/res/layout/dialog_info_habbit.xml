<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B3000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imgCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mbhq_closemodal">

        </ImageView>

        <com.ashysystem.mbhq.util.ProportionalImageView
            android:id="@+id/imgMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCross"
            android:src="@drawable/mbhq_habithacker_modal1">

        </com.ashysystem.mbhq.util.ProportionalImageView>

        <RelativeLayout
            android:id="@+id/rlGotIt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/imgMain"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corner_green">

            <com.ashysystem.mbhq.view.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Got It!"
                android:textColor="@color/white">

            </com.ashysystem.mbhq.view.TextViewBold>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlShowMeExamples"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rlGotIt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corner_green"
            android:visibility="gone">

            <com.ashysystem.mbhq.view.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Show Me Examples"
                android:textColor="@color/white"></com.ashysystem.mbhq.view.TextViewBold>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCreate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rlShowMeExamples"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner_green">

            <com.ashysystem.mbhq.view.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Create New Habit Now"
                android:textColor="@color/white"></com.ashysystem.mbhq.view.TextViewBold>

        </RelativeLayout>

        <com.ashysystem.mbhq.util.ProportionalImageView
            android:id="@+id/imgAnotherPhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlCreate"
            android:layout_marginBottom="20dp"
            android:src="@drawable/habit_list_2_anroid1"></com.ashysystem.mbhq.util.ProportionalImageView>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>