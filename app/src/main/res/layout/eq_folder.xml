<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000">
    <ImageView
        android:id="@+id/imgCross1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/s_cross"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="@color/colorPrimary">

            <com.ashysystem.mbhq.view.TextViewBold
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Folder Name"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <com.ashysystem.mbhq.view.TextViewOswaldLight
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Maximum 10 characters allowed for a folder name"
            android:textColor="@color/black"
            android:textSize="@dimen/fab_eighteen" />

        <LinearLayout
            android:id="@+id/rlAddEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/capsule_grey3">

                    <EditText
                        android:id="@+id/textF1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:inputType="text"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fab_fourteen" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgF1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp" />

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlF2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/capsule_grey3">

                    <EditText
                        android:id="@+id/textF2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:inputType="text"

                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fab_fourteen" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgF2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp" />

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlF3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/capsule_grey3">

                    <EditText
                        android:id="@+id/textF3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:inputType="text"

                        android:background="@null"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fab_fourteen" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgF3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>