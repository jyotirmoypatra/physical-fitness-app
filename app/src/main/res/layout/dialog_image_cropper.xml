<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/black">

        <TextView
            android:id="@+id/imageCropDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            android:padding="@dimen/spacing_12dp"
            android:text="@string/Next"
            android:textColor="@color/white"
            android:textSize="@dimen/spacing_12sp" />

        <TextView
            android:id="@+id/imageCropDoneWithoutCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/spacing_12dp"
            android:text="@string/save1"
            android:textColor="@color/white"
            android:textSize="@dimen/spacing_12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/spacing_12dp"
            android:text="@string/Photo_count_message"
            android:textColor="@color/white"
            android:textSize="@dimen/spacing_12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/imageCropBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/spacing_12dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/spacing_12sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlTop"
        android:background="@color/subtle_gray" />

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:layout_marginTop="96dp" />

</RelativeLayout>