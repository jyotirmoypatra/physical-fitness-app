<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F6F6F6">

            <com.ashysystem.mbhq.view.TextViewBold
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Back"
                android:textColor="@color/black"
                android:textSize="@dimen/fab_sixteen" />


            <ImageView
                android:id="@+id/editPopupBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_weight=".5"
                android:src="@drawable/ic_edit_gray"
                app:tint="@color/body_grey"

                />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonPanelEditmode"
            android:layout_below="@+id/rlBack">

            <LinearLayout
                android:id="@+id/llMainBlock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/buttonPanelEditmode"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F427AB"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="9">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <com.ashysystem.mbhq.view.TextViewRaleWay
                                    android:id="@+id/txtGoalValue1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="FINANCES"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/fab_fourteen" />

                                <com.ashysystem.mbhq.view.TextViewRaleWay
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:text="1"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/fab_sixteen" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <com.ashysystem.mbhq.view.TextViewRaleWay
                                    android:id="@+id/txtGoalValue2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="FAMILY"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/fab_fourteen" />

                                <com.ashysystem.mbhq.view.TextViewRaleWay
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:text="2"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/fab_sixteen" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <com.ashysystem.mbhq.view.TextViewRaleWay
                                    android:id="@+id/txtGoalValue3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="HEALTH"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/fab_fourteen" />

                                <com.ashysystem.mbhq.view.TextViewRaleWay
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:text="3"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/fab_sixteen" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:orientation="horizontal">

                            <com.ashysystem.mbhq.view.EditTextRaleWay
                                android:id="@+id/edtGratitudeName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@null"
                                android:gravity="left"
                                android:imeOptions="actionDone"
                                android:minLines="3"
                                android:padding="5dp"
                                android:textColor="#030000"
                                android:textSize="@dimen/fab_sixteen" />

                            <RelativeLayout
                                android:id="@+id/rlEditCopy"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".2"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/imgEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/mbhq_v_edit"
                                    android:padding="10dp" />

                                <ImageView
                                    android:id="@+id/imgCopy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/s_copy"
                                    android:padding="10dp"
                                    android:visibility="gone" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/imgGratitudeMainCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                app:cardCornerRadius="25dp">
                            <com.ashysystem.mbhq.util.ProportionalImageView
                                android:id="@+id/imgGratitudeMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:fitsSystemWindows="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/empty_image_old" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:id="@+id/llChangeImageDelete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|right"
                                android:layout_marginRight="1dp"
                                android:background="#80FFFFFF"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/imgDeleteIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/ic_deleete_green"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </FrameLayout>


                        <RelativeLayout
                            android:id="@+id/llChangeImageDeleteUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="1dp"
                            android:background="#80FFFFFF"
                            android:orientation="horizontal"
                            android:visibility="gone"

                            >

                            <RelativeLayout
                                android:id="@+id/rlChangeImage"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/capsule_border_green_white">


                                <com.ashysystem.mbhq.view.TextViewRaleWay
                                    android:id="@+id/txtUploadChangeImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="5dp"
                                    android:text="Change Image"
                                    android:textColor="#030000"
                                    android:textSize="@dimen/fab_fourteen" />
                            </RelativeLayout>

                        </RelativeLayout>


                        <View
                            android:id="@+id/view12"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/ashseparator"></View>


                        <RelativeLayout
                            android:id="@+id/rlCompletionDate"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.ashysystem.mbhq.view.TextViewRalewayMedium
                                android:id="@+id/txtVisionName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="Achieve by"
                                android:textColor="#030000"
                                android:textSize="@dimen/fab_sixteen" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <com.ashysystem.mbhq.view.TextViewRaleWay
                                    android:id="@+id/txtCompletionDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1/1/2017"
                                    android:textColor="@color/body_grey"
                                    android:textSize="@dimen/fab_sixteen" />

                            </LinearLayout>
                        </RelativeLayout>

                        <View
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/ashseparator"></View>

                        <RelativeLayout
                            android:id="@+id/rlCategory"
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.ashysystem.mbhq.view.TextViewRalewayMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="Catogory"
                                android:textColor="#030000"
                                android:textSize="@dimen/fab_sixteen" />

                            <Spinner
                                android:id="@+id/spCategory"
                                android:layout_width="130dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlSetReminder"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.ashysystem.mbhq.view.TextViewRalewayMedium
                                android:id="@+id/txtSetReminder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="Set a Reminder"
                                android:textColor="#030000"
                                android:textSize="@dimen/fab_sixteen" />

                            <CheckBox
                                android:id="@+id/chkSetReminder1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/drawable_custom_toggle"
                                android:button="@null" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/view13"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/ashseparator"></View>



                        <RelativeLayout
                            android:id="@+id/rlSong"
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.ashysystem.mbhq.view.TextViewRaleWay
                                android:id="@+id/txtSongName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="Song"
                                android:textColor="#030000"
                                android:textSize="@dimen/fab_sixteen" />

                            <com.ashysystem.mbhq.view.TextViewRaleWay
                                android:id="@+id/txtSongBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:text="Select Song"
                                android:textColor="#5A95F9"
                                android:textSize="@dimen/fab_fourteen" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/rl_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.ashysystem.mbhq.view.TextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Mark as:"
                                android:textColor="@color/black"></com.ashysystem.mbhq.view.TextViewBold>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".33"
                                    android:orientation="vertical">

                                    <com.ashysystem.mbhq.view.TextViewBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="In Progress"
                                        android:textColor="@color/black"></com.ashysystem.mbhq.view.TextViewBold>


                                    <CheckBox
                                        android:id="@+id/chkInPRog"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:button="@drawable/drawble_custom_checkbox"></CheckBox>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".33"
                                    android:orientation="vertical">

                                    <com.ashysystem.mbhq.view.TextViewBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Completed"
                                        android:textColor="@color/black"></com.ashysystem.mbhq.view.TextViewBold>


                                    <CheckBox
                                        android:id="@+id/chkCompleted"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:button="@drawable/drawble_custom_checkbox"></CheckBox>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".33"
                                    android:orientation="vertical">

                                    <com.ashysystem.mbhq.view.TextViewBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Hidden"
                                        android:textColor="@color/black"></com.ashysystem.mbhq.view.TextViewBold>


                                    <CheckBox
                                        android:id="@+id/chkHideen"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:button="@drawable/drawble_custom_checkbox"></CheckBox>
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </ScrollView>








        <LinearLayout
            android:id="@+id/buttonPanelEditmode"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/editLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/editSection"
                    android:layout_marginTop="10dp"
                    android:background="@color/ashseparator"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/editSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/belowLine"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">


                    <ImageView
                        android:id="@+id/clickPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_camera" />

                    <ImageView
                        android:id="@+id/galleryPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_gallery" />

                    <CheckBox
                        android:id="@+id/chkSetReminder"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:background="@drawable/drawable_custom_toggle"
                        android:button="@null" />

                    <ImageView
                        android:id="@+id/chooseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_calendar" />

                    <ImageView
                        android:id="@+id/rlSaveAchievement"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_check_gray" />
                </LinearLayout>

                <View
                    android:id="@+id/belowLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/ashseparator"
                    android:visibility="visible" />
            </RelativeLayout>


        </LinearLayout>






    </RelativeLayout>
</LinearLayout>