<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlSharableSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgMbhqLogo"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/mbhq__main_logo" />

                <com.ashysystem.mbhq.view.TextViewRaleWay
                    android:id="@+id/txtGratitudeCrewAchieve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgMbhqLogo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Gratitude Crew Achievement"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fab_eighteen" />

                <RelativeLayout
                    android:id="@+id/rlPicSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtGratitudeCrewAchieve"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_corner_black"
                    android:minHeight="250dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btnRewardCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/circle_light_green"
                            android:minWidth="60dp"
                            android:minHeight="60dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fab_sixteen"
                            android:visibility="visible"
                            />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewBackgroundPic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:elevation="10dp"
                            android:layout_gravity="center"
                            android:background="@color/transparent"
                            android:stateListAnimator="@null"
                            android:visibility="invisible"
                            android:minHeight="250dp">
                            <com.ashysystem.mbhq.util.ProportionalImageView
                                android:id="@+id/imgBackgroundPic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxHeight="430dp"
                                android:adjustViewBounds="true"
                                android:visibility="gone" />
                            <RelativeLayout
                                android:id="@+id/rlRewardCircle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|right"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="40dp"
                                android:background="@drawable/circle_light_green"
                                android:minWidth="60dp"
                                android:minHeight="60dp"
                                >

                                <com.ashysystem.mbhq.view.TextViewBold
                                    android:id="@+id/txtRewardCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="10000"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/fab_sixteen" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/imgBackgroundMannyPic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/llAddPic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgAdd"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_add_circle_outline_green" />

                            <com.ashysystem.mbhq.view.TextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text="add your pic"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fab_sixteen" />
                        </LinearLayout>
                    </FrameLayout>
                </RelativeLayout>

                <com.ashysystem.mbhq.view.TextViewBold
                    android:id="@+id/txtHashTagMbhqCrew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlPicSection"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="#MbhqGratitudeCrew"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fab_eighteen" />

                <com.ashysystem.mbhq.view.TextViewRalewayMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtHashTagMbhqCrew"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:text="www.mindbodyhq.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fab_sixteen" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/rlSharableSection"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <com.ashysystem.mbhq.view.ButtonSemiBold
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_corner_green"
                    android:text="share"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fab_sixteen" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_corner_green"
                    android:text="cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fab_sixteen" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>